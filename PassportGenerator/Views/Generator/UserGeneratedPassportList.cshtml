@model IEnumerable<PassportGenerator.Models.PassportGeneratedList>


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
        }


        .passport-container {
            width: 100%;
            height: 90vh;
            border: solid 1px black;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 18px;
        }

        .passport-card {
            padding: 30px 30px;
            width: 800px;
            height: 500px;
            border: solid 1px black;
        }

        .heading-main {
            text-align: center;
        }

        .line {
            border-bottom: 1px solid black;
            margin: 10px 10px;
        }

        .profile-image {
            width: 250px;
            height: 250px;
        }

        .passport-details {
            display: flex;
        }

        .profile-signature {
            width: 300px;
            height: 100px;
            border: 1px solid black;
        }

        .profile {
            display: flex;
            flex-direction: column;
        }

        /*.first-row {
            display: flex;
        }*/
        .custom-row {
            display: flex;
            width: 400px;
            height: 70px;
            line-height: 15px;
        }

        .custom-column {
            flex: 1;
            /*text-align: center;*/
            border: 1px solid black;
            /*padding: 10px;*/
        }

        .item-heading {
            font-size: 10px;
        }
    </style>
</head>

<body>
    <div class="passport-container">
        <div class="passport-card">
            <h1 class="heading-main">REPUBLIC OF INDIA</h1>
            <div class="line"></div>
            @foreach (var item in Model)
            {
                <div class="passport-details">
                    <div class="profile">
                        <img class="profile-image" src="data:image/png;base64,@Convert.ToBase64String(item.PhotoBytes)" />
                        <img class="profile-signature" src="data:image/png;base64,@Convert.ToBase64String(item.SignatureBytes)" />
                    </div>
                    <div class="contents">
                        @*<div class="row">
                                <p class="col-3">Type = P</p>
                                <p class="col-3">Country Code = IND</p>
                                <p class="col-3">@item.PassportNumber</p>
                            </div>*@
                        @*<div class="first-row">
                                <p class="">Type </p>
                                <p class="">P </p>
                                <p class="">Country Code </p>
                                <p class="">IND</p>
                                <p class="">Passport No.</p>
                                <p class="">@item.PassportNumber</p>
                            </div>*@
                        <div class="custom-row">
                            <div class="custom-column">
                                <p class="item-heading">Type</p>
                                <p>P</p>
                            </div>
                            <div class="custom-column">
                                <p class="item-heading">Country Code</p>
                                <p>IND</p>
                            </div>
                            <div class="custom-column">
                                <p class="item-heading">Passport No.</p>
                                <p>@item.PassportNumber</p>
                            </div>
                        </div>

                        <div class="custom-row">
                            <div class="custom-column">
                                <p class="item-heading">Name</p>
                                <p>@item.FirstName</p>
                            </div>
                        </div>

                        <p>@item.LastName</p>
                        <p>Nationality :INDIAN</p>
                        <p>@item.Gender</p>
                        <p>@item.Dob</p>
                        <p>@item.PassportOfficeName</p>
                        <p>@item.State</p>
                        <p>@item.DateOfIssue</p>
                        <p>@item.DateOfExpiry</p>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
