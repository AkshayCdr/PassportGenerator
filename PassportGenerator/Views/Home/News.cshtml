            height: auto;
        }

        .list {
            display: flex;
            margin-bottom: 10px;
        }

            .list img {
                width: 80px;
                height: 80px;
                object-fit: cover;
            }

        /* Article */
        article p {
            font-size: 20px;
            margin-bottom: 20px;
            hyphens: auto;
        }

            article p:first-child::first-line {
                font-weight: 700;
                font-size: 25px;
            }

        /* Blockquote */
        blockquote {
            font-size: 20px;
            padding: 10px 30px;
            margin-bottom: 40px;
            position: relative;
        }

            blockquote::before {
                content: open-quote;
                position: absolute;
                top: -48px;
                left: -4px;
                opacity: .3;
                color: #666;
                font-size: 150px;
            }

        /* Cards */
        .cards {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom: 40px;
        }

        .card {
            flex: 1;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .heading-4 {
            font-size: 20px;
            margin-bottom: 10px;
        }


        header h1{
            color:white;
            text-align:center;
        }

        header p {
            text-align:center;
            color:white;

        }
   
    </style>
