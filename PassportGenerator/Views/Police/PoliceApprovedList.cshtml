@model IEnumerable<PassportGenerator.Models.Police>

@{
    ViewBag.Title = "PoliceApprovedList";
}




<h2>Police Approved List</h2>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('../../imgs/pexels-pixabay-52500.jpg');
            background-size: cover;
            background-position: inherit;
            position: relative;
        }

            body::before {
                content: "";
                background: inherit;
                filter: blur(20px);
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: -1;
            }

    </style>
</head>

<body>

    @*<div class="container shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        <div class="row">
            <div class="col">*@
                @*<div class="table-responsive">*@
                    <div class="table table-dark ">
                        <div class="thead">
                            <div class="row">
                                <div class="col h4">
                                    First name
                                </div>
                                <div class="col h4">
                                   Last name
                                </div>
                                <div class="col h4">
                                    @Html.DisplayNameFor(model => model.Generated)
                                </div>
                                <div class="col h4">
                                    Status
                                </div> 
                                <div class="col h4">
                                    Police approval
                                </div>
                                <div class="col h4">
                                   Approval Date
                                </div>
                            </div>
                        </div>
                        <div class="tbody">
                            @foreach (var item in Model)
                            {
                                <div class="row">
                                    <div class="col">
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(modelItem => item.Generated)
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(modelItem => item.AdminApproveStatus)
                                    </div>
                                    <div class="col">
                                        @Html.DisplayFor(modelItem => item.PoliceApproveStatus)
                                    </div>
                                    @{
                                        string value = null;
                                        if (item.PoliceApproveDate != null)
                                        {
                                            value = item.PoliceApproveDate.Value.ToString("dd/MM/yyyy");
                                        }
                                    }
                                    <div class="col">
                                        @value
                                    </div>
                                   
                                </div>
                            }
                        </div>
                    </div>
                @*</div>*@
            @*</div>
        </div>
    </div>*@

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.5.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>




















